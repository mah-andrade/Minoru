<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".forms.telagerentel_layout.tela_gerente">

    <ImageView
        android:id="@+id/logominoru"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/minorulogo3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ajuda"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ajuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/logominoru"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/perfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/perfilh"
        app:layout_constraintBottom_toTopOf="@id/containerComponents"
        app:layout_constraintEnd_toStartOf="@id/logominoru"
        app:layout_constraintTop_toBottomOf="@+id/logominoru"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents2"
        android:layout_height="500dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gerente_id"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ic_Funcionarios"
        style="@style/ButtonAferir"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="0dp"
        android:drawableTop="@drawable/funcionarios"
        android:text=" Funcionários "
        android:textColor="@color/black"
        android:textSize="18dp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic_preços"
        app:layout_constraintTop_toTopOf="@+id/ic_preços" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ic_movimento"
        style="@style/ButtonAferir"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="0dp"
        android:drawableTop="@drawable/estacionamento"
        android:text="Movimentações"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:typeface="monospace"
        app:layout_constraintStart_toEndOf="@+id/ic_financas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ic_financas" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ic_financas"
        style="@style/ButtonAferir"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="36dp"
        android:drawableTop="@drawable/financas"
        android:text="   Finanças   "
        android:textColor="@color/black"
        android:textSize="18dp"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/containerComponents" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ic_preços"
        style="@style/ButtonAferir"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="36dp"
        android:drawableTop="@drawable/valores"
        android:text="    Preços    "
        android:textColor="@color/black"
        android:textSize="18dp"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_financas" />


    <ImageView
        android:id="@+id/sair"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_sair"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtola"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:text="Olá,"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="@+id/perfil" />

    <TextView
        android:id="@+id/gerente_id"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        android:text="Gerente"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toEndOf="@+id/txtola"
        app:layout_constraintBottom_toBottomOf="@id/txtola" />




</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>